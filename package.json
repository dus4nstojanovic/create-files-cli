{
  "name": "create-files-cli",
  "version": "0.0.1",
  "description": "A simple but powerful CLI to generate a list of files.",
  "main": "index.js",
  "scripts": {
    "build": "node esbuild",
    "start": "node ./dist/index.js",
    "create": "npm run build && npm start",
    "start:component": "node ./dist/index.js --dirPath ./src/components/{fileName} --templatePath templates/component --fileNameTextToBeReplaced component --textToBeReplaced FileName --replaceTextWith {fileName}",
    "create:component": "npm run build && npm run start:component"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dus4nstojanovic/create-files-cli.git"
  },
  "keywords": [
    "CLI",
    "generate",
    "create",
    "files"
  ],
  "author": "Dusan Stojanovic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dus4nstojanovic/create-files-cli/issues"
  },
  "homepage": "https://github.com/dus4nstojanovic/create-files-cli#readme",
  "devDependencies": {
    "@types/inquirer": "^9.0.1",
    "esbuild": "^0.15.7"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "chalk": "^5.0.1",
    "inquirer": "^9.1.1"
  }
}
